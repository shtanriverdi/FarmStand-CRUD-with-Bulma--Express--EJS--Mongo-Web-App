        </section>

        <section class="section">
            <div class="container">
                <div class="has-text-centered">
                    <p class="title"><%= category %> Products</p>
                    <ul>
                        <% for (let product of products) { %>
                            <li>
                                <div class="columns">
                                    <div class="column is-narrow">
                                        <a href="/products/<%= product._id %>">
                                            <%= product.name %>
                                        </a>
                                    </div>
                                    <div class="column is-narrow">
                                        <a href="/products/<%= product._id %>/edit"><button
                                                class="button is-focused is-medium is-rounded is-info is-light"><%- include('../partials/edit_icon')
                                                    -%></button></a>
                                    </div>
                                    <div class="column is-narrow">
                                        <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
                                            <button class="button is-focused is-medium is-rounded is-danger is-light"><%-
                                                    include('../partials/delete_icon') -%></button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                            <% } %>
                    </ul>
                    <a href="/products/new">Create New Product<button
                                class="button is-focused is-medium is-rounded is-success  is-light"><%- include('../partials/new_icon') -%></button></a>

                    <% if (category !==undefined) { %>
                        <a href="/products">All Products</a>
                    <% } %>
                </div>
            </div>
        </section>
