<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header') -%>

    <body>
        <section class="section">
            <div class="container">
                <div class="columns is-centered has-text-centered">
                    <div class="tile is-parent is-8">
                        <article class="tile is-child notification is-warning">
                            <p class="title">Welcome to the Farm Stand!</p>
                            <p class="subtitle is-italic">Fresh, Affordable Produce, Delivered to Your Door!</p>
                            <p class="subtitle">🍇🍉🍊🍋🍌🍍🍎🍏🍐🍑🍒🍓🥥🥑🍆🥔🥕</p>
                        </article>
                    </div>
                </div>
            </div>
        </section>

        <section class="section">
            <div class="container">
                <div class="is-centered has-text-centered">
                    <p class="title">
                        <%= category %> Products
                    </p>
                    <a href="/products/new">Create New Product<button
                            class="button is-focused is-medium is-rounded is-success  is-light"><%-
                                include('../partials/new_icon') -%></button></a>
                    <% for (let product of products) { %>
                        <div class="columns">
                            <div class="column mx-2 is-half is-warning notification">
                                <a href="/products/<%= product._id %>">
                                    <%= product.name %>
                                </a>
                            </div>
                            <div class="column mx-2 is-info notification"><a
                                    href="/products/<%= product._id %>/edit"><button
                                        class="button is-focused is-medium is-rounded is-info is-light"><%-
                                            include('../partials/edit_icon') -%></button></a></div>
                            <div class="column mx-2 is-danger notification">
                                <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
                                    <button class="button is-focused is-medium is-rounded is-danger is-light"><%-
                                            include('../partials/delete_icon') -%></button>
                                </form>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </section>

        <footer class="footer">
            <div class="has-text-centered is-size-7">
                <p>
                    <strong>Farm Stand</strong> created by <a href="https://shtanriverdi.github.io/">Süha
                        Tanrıverdi.</a>
                <p>All Rights Reserved. Genesis Corporation™ 2023.</p>
                </p>
            </div>
        </footer>
        <script src="/reload/reload.js"></script>
    </body>

</html>